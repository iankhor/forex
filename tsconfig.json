{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["esnext"],
		"allowJs": true,
		"outDir": "build",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"downlevelIteration": true,
		"baseUrl": "./"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "./src/**/*.test.ts", "./src/**/*.test.tsx", "testlib", "jest.config.js", "build"]
}
